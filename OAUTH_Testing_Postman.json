              "mode": "raw",
              "raw": "{\n  \"client_id\": \"mock-google-client-id\",\n  \"redirect_uri\": \"http://localhost:3000/oauth/callback/google\",\n  \"scope\": \"https://www.googleapis.com/auth/adwords\",\n  \"state\": \"random_state_google_{{$timestamp}}\"\n}"
