# VYOM ERP - Complete Environment Configuration
# Development Environment - December 25, 2025
# This is the DEVELOPMENT environment file. Copy and modify values as needed.

# ============================================================
# APPLICATION CONFIGURATION
# ============================================================
APP_NAME=vyom-erp
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0
GIN_MODE=debug

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
# PostgreSQL Connection
DB_HOST=localhost
DB_PORT=3306
DB_USER=vyom_user
DB_PASSWORD=dev_password_123
DB_NAME=vyom_erp_dev
DATABASE_URL=mysql://vyom_user:dev_password_123@localhost:3306/vyom_erp_dev

# Database Connection Pool
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=5
DB_CONNECTION_TIMEOUT=10s
DB_IDLE_TIMEOUT=5m

# ============================================================
# REDIS CONFIGURATION
# ============================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# ============================================================
# JWT & SECURITY
# ============================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-12345
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
JWT_ALGORITHM=HS256

# API Keys & Secrets
API_SECRET_KEY=your-api-secret-key-change-this
API_KEY_PREFIX=vyom_

# ============================================================
# OAUTH CONFIGURATION
# ============================================================

# Google OAuth 2.0
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8080/api/v1/auth/callback/google
GOOGLE_OAUTH_SCOPES=https://www.googleapis.com/auth/userinfo.email https://www.googleapis.com/auth/userinfo.profile

# Meta (Facebook) OAuth 2.0
META_OAUTH_CLIENT_ID=your-meta-client-id
META_OAUTH_CLIENT_SECRET=your-meta-client-secret
META_OAUTH_REDIRECT_URI=http://localhost:8080/api/v1/auth/callback/meta
META_OAUTH_SCOPES=email public_profile

# ============================================================
# GOOGLE ADS CONFIGURATION
# ============================================================
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-developer-token
GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id
GOOGLE_ADS_CLIENT_SECRET=your-google-ads-client-secret
GOOGLE_ADS_REFRESH_TOKEN=your-google-ads-refresh-token
GOOGLE_ADS_CUSTOMER_ID=your-google-ads-customer-id
GOOGLE_ADS_API_VERSION=v16

# ============================================================
# META ADS (FACEBOOK ADS) CONFIGURATION
# ============================================================
META_BUSINESS_ACCOUNT_ID=your-meta-business-account-id
META_AD_ACCOUNT_ID=act_your-ad-account-id
META_ACCESS_TOKEN=your-meta-access-token
META_GRAPH_API_VERSION=v18.0

# ============================================================
# PAYMENT GATEWAY CONFIGURATION
# ============================================================

# Razorpay
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret
RAZORPAY_ACCOUNT_ID=your_razorpay_account_id
RAZORPAY_MODE=test

# Billdesk
BILLDESK_CLIENT_ID=your-billdesk-client-id
BILLDESK_CLIENT_SECRET=your-billdesk-client-secret
BILLDESK_MERCHANT_ID=your-billdesk-merchant-id
BILLDESK_ENVIRONMENT=sandbox
BILLDESK_WEBHOOK_SECRET=your-billdesk-webhook-secret

# ============================================================
# CORS & SECURITY
# ============================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
CORS_CREDENTIALS=true
CORS_MAX_AGE=3600
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# ============================================================
# API RATE LIMITING
# ============================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s
RATE_LIMIT_BURST=20

# ============================================================
# LOGGING & MONITORING
# ============================================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE=/tmp/vyom-erp.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=7

# Monitoring
ENABLE_PROFILING=false
PROFILING_PORT=6060
METRICS_ENABLED=true

# ============================================================
# SYNC JOB CONFIGURATION
# ============================================================
SYNC_JOB_ENABLED=true
SYNC_JOB_INTERVAL=30s

# Google Ads Sync
SYNC_GOOGLE_ADS_ENABLED=true
SYNC_GOOGLE_ADS_INTERVAL=3600s

# Meta Ads Sync
SYNC_META_ADS_ENABLED=true
SYNC_META_ADS_INTERVAL=3600s

# Attribution Sync
SYNC_ATTRIBUTION_ENABLED=true
SYNC_ATTRIBUTION_INTERVAL=14400s

# ROI Sync
SYNC_ROI_ENABLED=true
SYNC_ROI_INTERVAL=21600s

# ============================================================
# EMAIL CONFIGURATION
# ============================================================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@vyom-erp.com
SMTP_FROM_NAME=VYOM ERP

# SendGrid (Alternative)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@vyom-erp.com

# ============================================================
# AWS S3 CONFIGURATION
# ============================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=vyom-erp-dev
AWS_S3_ENDPOINT=https://s3.amazonaws.com

# ============================================================
# STORAGE & FILE UPLOADS
# ============================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=/tmp/uploads
STORAGE_TYPE=local

# ============================================================
# FEATURE FLAGS
# ============================================================
ENABLE_OAUTH=true
ENABLE_GOOGLE_ADS=true
ENABLE_META_ADS=true
ENABLE_PAYMENT_GATEWAY=true
ENABLE_AI_FEATURES=false
ENABLE_ADVANCED_REPORTING=true
ENABLE_CUSTOM_WORKFLOWS=true

# ============================================================
# DEVELOPMENT & DEBUGGING
# ============================================================
DEBUG_MODE=true
VERBOSE_LOGGING=false
SHOW_SQL_LOGS=true
ALLOW_CORS_WILDCARD=false

# ============================================================
# API CONFIGURATION
# ============================================================
API_TIMEOUT=30s
API_READ_TIMEOUT=15s
API_WRITE_TIMEOUT=15s
API_IDLE_TIMEOUT=60s
API_VERSION=v1

# ============================================================
# TENANT CONFIGURATION
# ============================================================
DEFAULT_TENANT_ID=default-tenant
MULTI_TENANT_MODE=true
TENANT_ISOLATION_ENABLED=true

# ============================================================
# WEBHOOK CONFIGURATION
# ============================================================
WEBHOOK_TIMEOUT=30s
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_INTERVAL=5s

# ============================================================
# TESTING
# ============================================================
TEST_DATABASE_URL=postgresql://vyom_user:dev_password_123@localhost:5432/vyom_erp_test
TEST_MODE=false
TEST_REDIS_URL=redis://localhost:6379/1
# ============================================================
# TLS/SSL CONFIGURATION (Production)
# ============================================================
TLS_ENABLED=false
TLS_CERT_PATH=/etc/ssl/certs/cert.pem
TLS_KEY_PATH=/etc/ssl/private/key.pem

# ============================================================
# MONITORING & ERROR TRACKING
# ============================================================
SENTRY_DSN=
BUILD_TIMESTAMP=
BUILD_VERSION=1.0.0

# ============================================================
# CREDENTIAL ENCRYPTION (For per-tenant credentials)
# ============================================================
CREDENTIAL_MASTER_KEY=your-base64-encoded-32-byte-key-for-encryption