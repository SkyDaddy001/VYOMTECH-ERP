# Environment Configuration

# Application
APP_NAME=vyom-lms
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=vyom_lms
DB_URL=mysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
CORS_MAX_AGE=3600

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# External Providers
# VoIP Provider (Twilio, Exotel, etc.)
VOIP_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Provider
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@vyom.com

# SMS Provider
SMS_PROVIDER=twilio

# AI Provider (for lead scoring)
AI_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key

# Cloud Storage
STORAGE_PROVIDER=s3
AWS_S3_BUCKET=vyom-lms-bucket
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Speech-to-Text
STT_PROVIDER=google
GOOGLE_APPLICATION_CREDENTIALS=./config/google-creds.json

# Sentiment Analysis
SENTIMENT_PROVIDER=google

# Feature Flags
ENABLE_AI_LEAD_QUALIFICATION=true
ENABLE_CALL_RECORDING=true
ENABLE_EMAIL_INTEGRATION=true
ENABLE_SMS_INTEGRATION=true

# Development
DEBUG_MODE=true
PROFILING_ENABLED=false

# Testing
TEST_DB_URL=mysql://root:password@localhost:3306/vyom_lms_test
